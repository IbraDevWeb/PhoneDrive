// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. LES PRODUITS
model Product {
  id          Int      @id @default(autoincrement())
  model       String
  price       Float
  storage     String?
  color       String?
  description String?
  image       String?
  createdAt   DateTime @default(now())
}

// 2. LES CLIENTS (Nouveau !)
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String // Sera crypté, bien sûr
  name      String?
  phone     String?
  address   String?
  createdAt DateTime @default(now())

  // Un utilisateur peut avoir plusieurs commandes
  orders Order[]
}

// 3. LES COMMANDES (Mise à jour pour lier au client)
model Order {
  id Int @id @default(autoincrement())

  // Infos de livraison (au cas où l'adresse change)
  customer String
  email    String
  address  String
  phone    String? // Ajout du téléphone pour la livraison

  total     Float
  items     Json // Contenu du panier
  status    String   @default("payé") // payé, expédié, livré
  createdAt DateTime @default(now())

  // Lien optionnel vers un compte User (si le client est inscrit)
  userId Int?
  user   User? @relation(fields: [userId], references: [id])
}

// 4. LES RDV RÉPARATION
model Appointment {
  id        Int      @id @default(autoincrement())
  client    String
  email     String
  phone     String
  device    String
  issue     String
  date      DateTime
  createdAt DateTime @default(now())
}
